<html>
  <head>
    <link rel="stylesheet" href="./stylesheets/style.css" />
  </head>
  <body>
    <div class="full-block">
      <h1>Mini Message Board</h1>
      <div>
        <h1>User Messages</h1>
        <button>
          <a href="/new">Add new Message</a>
        </button>
      </div>
      <%messages.forEach(message=>{%>
      <div class="individual-block">
        <h1><%=message.text%></h1>
        <p><%=message.user%></p>
        <p><%=message.added%></p>
        <button>
          <a href="/messages/<%=message.id%>">Open this Message</a>
        </button>
      </div>
      <%})%>
    </div>
  </body>
</html>
